---
import Logo from "../components/Logo.vue"
---

<header id="topbar" class="pinned">
  <h1 class="h">Kristof Dewilde</h1>
  <a class="logo" href="#"><Logo client:idle /></a>
</header>

<style lang="scss">
header#topbar {
  z-index: 99;
  top: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  border-bottom: 1px solid transparent;
  transition: transform 750ms ease-out, padding 750ms ease-out, background 500ms ease-out, border-color 750ms ease-out, box-shadow 750ms ease-out;

  &.pinned {
    position: absolute;
    padding: 80px 45px;
    background: transparent;
    border-color: transparent;
    box-shadow: transparent;
    transform: translateY(0);
  }

  &.floating {
    position: fixed;
    padding: 15px 45px;
    background: transparent;
    border-color: transparent;
    box-shadow: transparent;
    transform: translateY(-150px);
  }

  &.sticky {
    background: var(--background);
    border-color: var(--border);
    box-shadow: 0 5px 5px rgb(0 0 0 / 2%);
    transform: translateY(0);
  }

  .logo {
    height: 40px;
  }
}
</style>
