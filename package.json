{
  "name": "website",
  "description": "Kristof Dewilde's personal website",
  "version": "0.1.0",
  "private": true,
  "author": "Kristof Dewilde <git@krivi.be>",
  "license": "MIT",
  "scripts": {
    "setup": "gem install bundler && bundle install && npm install && npm audit",
    "clean": "rm -rf ./assets/dist/*",
    "start": "run-p watch serve",
    "watch": "parcel watch ./assets/bundle.js ./assets/screen.scss ./assets/print.scss -d ./assets/dist",
    "build": "parcel build ./assets/bundle.js ./assets/screen.scss ./assets/print.scss -d ./assets/dist",
    "serve": "bundle exec jekyll serve --livereload",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./assets/src/js/**",
    "lint:css": "stylelint ./assets/src/css/**",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Qrivi/qrivi.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/Qrivi/qrivi.github.io/issues"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "standardx": "^5.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run clean && npm run build"
    }
  }
}
